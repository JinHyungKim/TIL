class Main {
  public static void main(String[] args) {
		int n = 8;
		System.out.println(toThePowerOfTwo(n));
	}

	public static int toThePowerOfTwo(int num){
		if(num == 1)
			return 2;
		else
			return 2*toThePowerOfTwo(num-1);
	}
}	

